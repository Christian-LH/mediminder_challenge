<div class="container">
   <!-- Hero Section -->
  <section class="bg-light text-dark py-5">
    <div class="container text-center">
      <h1 class="display-4 fw-bold my-3">Welcome to MediMinder</h1>
      <p class="lead mb-4">
        Your personal guide to staying ahead of preventive checkups and vaccinations.
      </p>
      <!-- Button Link depends on User has Profile or not -->
      <% if @user.profil.nil? %>
        <%= link_to "Get started", root_path %>
      <% else %>
        <%= link_to "Your upcoming checkups", root_path %>
      <% end %>
    </div>
  </section>

  <!-- Features Section -->
