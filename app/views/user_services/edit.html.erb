<h1>This is the user_services edit Page</h1>


  <%# this is where all the services are displayed for a user and offered to delete %>
  <div class="container">
    <% @user_services.each do |user_service| %>
      <div class="d-flex align-items-center my-3 p-3 border rounded shadow-sm hover-effect bg-secondary text-white">
        <div>
          <h2><%= user_service.service.name %></h2>
          <p><%= user_service.service.description %></p>
        </div>
        <div class="d-flex justify-content-end ms-auto">
          <%= form_with url: user_service_path(user_service), method: :delete, local: true, html: { style: "display:inline" } do %>
            <%= button_tag type: "submit", class: "btn px-2 mx-3", style: "background-color: rgba(255, 255, 255, 0.12); color: #b90000ff; border: none; border-radius: 6px;", data: { turbo_confirm: "Are you sure?" } do %>
              <i class="fa-regular fa-trash-can px-1"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
