<div class="container py-4">

  <!-- HEADER -->
  <div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">

      <!-- User Info -->
      <div class="d-flex align-items-center">

        <div class="d-flex align-items-center my-0 gap-3">
          <% icon_class = @profile.icon.nil? ? @icons[rand(1..9)] : @icons[@profile.icon] %>
          <span class="btn btn-primary rounded-circle d-inline-flex justify-content-center align-items-center" style="width: 60px; height: 60px;">
            <i class="<%= icon_class %> fa-2x"></i>
          </span>
          <div class="d-flex flex-column">
            <h6 class="text-primary lh-1">Profile of:</h6>
            <h3 class="fw-semibold mb-0 text-primary lh-1"><%= @profile.user_name %></h3>
          </div>
        </div>

      </div>
    </div>

    <!-- SEARCH BAR -->
      <form action="" method="get" class="mt-3 mb-4">
        <div class="input-group rounded-pill shadow-sm bg-light px-3 py-2">
          <span class="input-group-text bg-light border-0 p-0 me-2">
            <i class="bi bi-search text-muted"></i>
          </span>
          <input
            type="text"
            name="query"
            class="form-control border-0 bg-light"
            placeholder="Search checkups..."
            value="<%= params[:query] %>"
          >
        </div>
      </form>

  <!-- ACTION BUTTONS -->
  <div class="d-grid gap-2 d-md-flex justify-content-md-center mb-3">
    <%= link_to edit_profile_path(@profile), class: "btn btn-outline-primary btn-lg w-100 d-flex align-items-center justify-content-center rounded-5" do %>
      <p class="mb-0 mx-3">Vaccination Checker</p><i class="fa-solid fa-passport"></i>
    <% end %>

    <%= link_to new_profile_risk_assessor_path(@profile), class: "btn btn-outline-primary btn-lg w-100 w-md-auto flex-fill d-flex align-items-center justify-content-center rounded-5" do %>
      <p class="mb-0 mx-3">Recommendations</p><i class="fa-solid fa-comment-medical"></i>
    <% end %>
  </div>

  <!-- DONE SERVICES -->
  <% done_count = @user_services.where(status: "done").count %>
  <% if done_count.positive? %>
    <% done_service = @user_services.where(status: "done").order(updated_at: :desc).first %>
    <%= link_to profile_user_service_path(@profile, done_service), class: "text-decoration-none", data: { turbo: false } do %>  <!-- link_to has to be linked to the archive in which every done service is shown (as an iteration) -->
      <div class="d-flex align-items-center justify-content-center mb-3 p-3 rounded shadow-sm bg-success text-white">
        <h6 class="my-2">Completed services:</h6>
        <h5 class="my-2 mx-3"><strong><%= done_count %></strong></h5>
      </div>
    <% end %>
  <% else %>
    <div class="d-flex align-items-center justify-content-center mb-3 p-3 rounded shadow-sm bg-light text-secondary">
      <h6 class="my-2">Completed services:</h6>
      <h5 class="my-2 mx-3"><strong>0</strong></h5>
    </div>
  <% end %>

  <!-- PENDING SERVICES -->
  <h4 class="text-muted mt-4 mb-3">Next checkups</h4>

  <% @profile.user_services.where(status: "pending").each do |user_service| %>
    <%= link_to profile_user_service_path(@profile, user_service), class: "text-decoration-none", data: { turbo: false } do %>
      <div class="d-flex align-items-center mb-4 p-4 pb-5 rounded-4 shadow bg-white">
        <div>
          <h6 class="fw-semibold mb-1"><%= user_service.service.name %></h6>
          <p class="mb-0 small text-secondary">
            <%= user_service.due_date.strftime("%-d. %B %Y") %>
            (<%= distance_of_time_in_words(Date.today, user_service.due_date) %>)
          </p>
        </div>
      </div>
    <% end %>
  <% end %>


</div>
