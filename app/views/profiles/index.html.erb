<div class="d-flex justify-content-center align-items-start min-vh-100 pt-5">
  <div class="w-100" style="max-width: 480px;">

    <!-- Greeting -->
    <div class="text-center mb-4">
      <h3 class="mb-3">Hello <%= current_user.profile.user_name %></h3>
      <p class="text-muted">Here are all your profiles:</p>
    </div>

    <!-- Add new profile button -->
    <div class="d-grid mb-4">
      <%= link_to "+ Add a new profile",
                  new_profile_path,
                  class: "btn btn-outline-primary btn-lg py-3" %>
    </div>

    <!-- List of profiles -->
    <div class="d-grid gap-3">
      <% @user_profiles.each do |user_profile| %>

        <!-- current profile -->
        <% if user_profile == current_user.profile %>
          <%= link_to profile_user_services_path(user_profile), class: "text-decoration-none" do %>
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title mb-2"><%= user_profile.user_name %> <em>(current)</em></h5>
                <p class="card-text text-muted mb-0">Birthday: <%= user_profile.birthday.strftime("%B %d, %Y") if user_profile.birthday %></p>
              </div>
            </div>
          <% end %>
        <!-- other profiles -->
        <% else %>
          <%= link_to profile_user_services_path(user_profile), class: "text-decoration-none" do %>
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title mb-2"><%= user_profile.user_name %></h5>
                <p class="card-text text-muted mb-0">Birthday: <%= user_profile.birthday.strftime("%B %d, %Y") if user_profile.birthday %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
