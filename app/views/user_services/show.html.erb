<div class="container pt-3 py-5">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">

      <!-- Header with back button -->
        <div class="d-flex align-items-center mb-4">

          <a class="text-decoration-none text-secondary link-dark"
            href="<%= params[:return_to].presence || profile_user_services_path(@profile) %>"
            onclick="event.preventDefault(); window.history.back();">
            ⬅ Back
          </a>

        </div>

      <!-- user services title -->
      <div class="text-center mb-4">
      <h2 class="mb-0 fw-bold">Service details</h2>
      </div>

      <!-- Card with service info -->
      <div class="card shadow-sm border-0" style="background-color: rgba(var(--bs-primary-rgb), 0.1);">
        <div class="card-body">

          <!-- Title + description -->
          <h4 class="fw-bold mb-2"><%= @user_service.service.name %></h4>
          <p class="text-muted mb-4"><%= @user_service.service.description %></p>

          <!-- Meta data as definition list -->
          <dl class="row small mb-4">
            <%# <dt class="col-5 text-muted">User service ID</dt>
            <%# <dd class="col-7 text-end"><%= @user_service.id %></dd>

            <dt class="col-5 text-muted">Status</dt>
            <dd class="col-7 text-end"><%= @user_service.status || "not set" %></dd>

            <dt class="col-5 text-muted">Due date</dt>
            <dd class="col-7 text-end">
              <%= @user_service.due_date&.strftime("%d %b %Y") || "—" %>
            </dd>

            <dt class="col-5 text-muted">Completed at</dt>
            <dd class="col-7 text-end">
              <%= @user_service.completed_at&.strftime("%d %b %Y") || "—" %>
            </dd>
          </dl>

          <!-- Action buttons -->
          <div class="d-flex flex-column gap-2 mt-3">

            <% if doctolib_url_for(@user_service.service.name) %>
              <%= link_to "Find a Doctor on Doctolib",
                          doctolib_url_for(@user_service.service.name),
                          class: "btn btn-outline-primary btn-lg w-100",
                          target: "_blank",
                          rel: "noopener" %>
            <% end %>

            <button type="button" class="btn btn-success btn-lg w-100">
              I already went
            </button>

            <button type="button" class="btn btn-secondary btn-lg w-100">
              I will not go
            </button>

          </div>


        </div>
      </div>

    </div>
  </div>
</div>
